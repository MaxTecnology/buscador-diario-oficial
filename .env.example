APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
TRUSTED_PROXIES=*
SCRIBE_ADD_ROUTES=true
FILAMENT_BRAND_NAME="${APP_NAME}"
FILAMENT_BRAND_LOGO_FILE=resources/branding/logo.png
# Fallback opcional (URL absoluta/CDN): FILAMENT_BRAND_LOGO_URL=https://seu-dominio.com/storage/logo.png
# Fallback opcional (caminho publico legado): FILAMENT_BRAND_LOGO_PATH=storage/systemlogo.png

# Credenciais padrao criadas pelo seeder (somente desenvolvimento)
# Admin: admin@admin.com / admin123
# Manager: manager@diario.com / manager123
# Operator: operator@diario.com / operator123

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=diario
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
DIARIOS_DISK=diarios
QUEUE_CONNECTION=database
DB_QUEUE_RETRY_AFTER=1200
REDIS_QUEUE_RETRY_AFTER=1200

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_EHLO_DOMAIN=
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=MINIO_ROOT
AWS_SECRET_ACCESS_KEY=MINIO_PASSWORD
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=diarios
AWS_USE_PATH_STYLE_ENDPOINT=true
AWS_ENDPOINT=http://minio:9000
AWS_URL=

# MinIO (opcional, sobrescreve AWS_* se usar separado)
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=admin123
DIARIOS_KEY=${MINIO_ROOT_USER}
DIARIOS_SECRET=${MINIO_ROOT_PASSWORD}
DIARIOS_REGION=us-east-1
DIARIOS_BUCKET=diarios
DIARIOS_ENDPOINT=http://minio:9000
DIARIOS_URL=
DIARIOS_PUBLIC_ENDPOINT=
DIARIOS_USE_PATH_STYLE=true

